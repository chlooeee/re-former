<%= form_for @user do |u| %>
    <%= u.label :name %>
    <%= u.text_field :name, :placeholder => "Bob" %> </br>
    <%= u.label :email, "Your email" %>
    <%= u.text_field :email, :placeholder => "example@example.com" %> </br>
    <%= u.label :password %>
    <%= u.text_field :password, :type => "password"%> <br>
    <%= u.submit "Create" %>
<% end %>
